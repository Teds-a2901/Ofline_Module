<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityMajorsub">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bubles1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnenglish"
                android:layout_width="306dp"
                android:layout_height="89dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="140dp"
                android:layout_marginRight="65dp"
                android:background="#0000"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/custombtnenglish" />

            <ImageButton
                android:id="@+id/btnscience"
                android:layout_width="306dp"
                android:layout_height="89dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="65dp"
                android:background="#0000"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/custombtnscience" />

            <ImageButton
                android:id="@+id/btnmath"
                android:layout_width="306dp"
                android:layout_height="89dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="65dp"
                android:background="#0000"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/custombtnmath" />

            <ImageButton
                android:id="@+id/btnfilipino"
                android:layout_width="306dp"
                android:layout_height="89dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="65dp"
                android:background="#0000"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/custombtnfilipino" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>