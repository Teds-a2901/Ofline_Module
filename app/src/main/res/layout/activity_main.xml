<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bubles1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imglogo"
                android:layout_width="317dp"
                android:layout_height="140dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/txtwelcome"
                android:layout_width="355dp"
                android:layout_height="31dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="55dp"
                android:text="Welcome Grade 4 student"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="26sp" />

            <ImageButton
                android:id="@+id/btnmajor"
                android:layout_width="306dp"
                android:layout_height="89dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="65dp"
                android:background="#0000"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/custombtnmajor" />

            <ImageButton
                android:id="@+id/btnminor"
                android:layout_width="306dp"
                android:layout_height="89dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="65dp"
                android:background="#0000"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/custombtnminor" />

            <ImageButton
                android:id="@+id/btnextra"
                android:layout_width="306dp"
                android:layout_height="89dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="65dp"
                android:background="#0000"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/custombtnextra" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>