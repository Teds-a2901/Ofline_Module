<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bubles1"
    tools:context=".MainActivityEspmodule">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textesp"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="120dp"
                android:text="E.S.P MODULE"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageButton
                android:onClick="btnespmodule1"
                android:layout_width="306dp"
                android:layout_height="89dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="70dp"
                android:background="#0000"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/custombtnmodule1" />

            <ImageButton
                android:layout_width="306dp"
                android:layout_height="89dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="70dp"
                android:background="#0000"
                android:onClick="btnespmodule2"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/custombtnmodule2" />

            <ImageButton
                android:layout_width="306dp"
                android:layout_height="89dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="70dp"
                android:background="#0000"
                android:onClick="btnespmodule3"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/custombtnmodule3" />

            <ImageButton
                android:layout_width="306dp"
                android:layout_height="89dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="70dp"
                android:background="#0000"
                android:onClick="btnespmodule4"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/custombtnmodule4" />

            <ImageButton
                android:layout_width="306dp"
                android:layout_height="89dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="70dp"
                android:background="#0000"
                android:onClick="btnquizesp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/custombtnquizesp" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>